<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btnAddress2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onSearch2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddress2"
        android:layout_alignBottom="@+id/btnAddress2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAddress2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/btnzoomin2"
        android:layout_below="@+id/btnAddress2"
        android:layout_alignParentStart="true"
        android:onClick="onZoom2"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:id="@+id/btnzoomout2"
        android:layout_alignBottom="@+id/btnzoomin2"
        android:layout_toEndOf="@+id/btnzoomin2"
        android:onClick="onZoom2"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map2"
        android:layout_below="@+id/btnzoomout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>